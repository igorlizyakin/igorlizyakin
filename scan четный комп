
#name_even нахождение четного имени компьютера
Clear-Host
$env:computername #получение имя компьютера
$a = $env:computername #присваеваем имени компьютера переменную
$a.GetType()
$a[-1] #получаем последнее число
$b = $a[-1] #прсваеваем значение последнего числа переменную
[math]::IEEERemainder($b,2) #делим на два и получаем остаток от деления
[int]$c = [math]::IEEERemainder($b,2) #остатку от деления присваеваем переменную
If ($c -eq 0 ){ #если переменная равна нулю то четное (условие)
Write-Host "четное"
}
else {
Write-Host "нечетное"
}
write-host
